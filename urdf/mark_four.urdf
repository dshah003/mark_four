<?xml version="1.0"?>
<robot name="mark_four">
  
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.18 0.12 0.04"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.035"/>
      </geometry>
      <origin rpy="-1.5708 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_right_wheel" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="-0 0 0" xyz="-0.055 -0.08 -0.02"/>
    <limit effort="100" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.035"/>
      </geometry>
      <origin rpy="-1.5708 0 0" xyz="-0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_left_wheel" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.055 0.08 -0.02" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="caster_wheel">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0125"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.0125"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>  
  </link>

  <joint name="base_link_to_caster_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin rpy="0 0 0" xyz="0.07 0 -0.0425"/>
  </joint>

  <link name="kinect_link">
    <visual>
      <geometry>
        <box size="0.064 0.121 0.0381" />
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
       iyy="0.0001" iyz="0.0" 
       izz="0.0001" />
     </inertial>
   </link>

   <joint name="kinect_depth_joint" type="fixed">
    <origin xyz="0 0.028 0" rpy="0 0 0" />
    <parent link="kinect_link" />
    <child link="kinect_depth_frame" />
  </joint>

  <link name="kinect_depth_frame">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
       iyy="0.0001" iyz="0.0" 
       izz="0.0001" />
     </inertial>
   </link>

   <joint name="depth_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.57075 0 -1.57075" />
    <parent link="kinect_depth_frame" />
    <child link="kinect_depth_optical_frame" />
  </joint>

  <link name="kinect_depth_optical_frame">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
       iyy="0.0001" iyz="0.0" 
       izz="0.0001" />
     </inertial>
   </link>

   <joint name="base_link_to_kinect_link" type="fixed">
    <parent link="base_link"/>
    <child link="kinect_link"/>
    <origin rpy="0 0 0" xyz="-0.12 0 0.06"/>
  </joint>

</robot>