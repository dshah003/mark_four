<?xml version="1.0"?>
<robot name="mark_four">
  
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.18 0.12 0.04"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.035"/>
      </geometry>
      <origin rpy="-1.5708 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_right_wheel" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="-0 0 0" xyz="-0.055 -0.08 -0.02"/>
    <limit effort="100" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.035"/>
      </geometry>
      <origin rpy="-1.5708 0 0" xyz="-0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

 <joint name="base_to_left_wheel" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.055 0.08 -0.02" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

</robot>